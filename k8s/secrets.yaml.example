# DO NOT commit this file with real secrets!
# This is a template. Create the actual secret with:
# kubectl create secret generic ai-automation-secrets \
#   --from-literal=database-url=postgresql://... \
#   --from-literal=openai-api-key=sk-... \
#   --from-literal=anthropic-api-key=sk-ant-... \
#   --from-literal=jwt-secret=your-secret-key

apiVersion: v1
kind: Secret
metadata:
  name: ai-automation-secrets
  namespace: ai-automation
type: Opaque
stringData:
  database-url: "postgresql+asyncpg://user:password@postgres-service:5432/ai_automation"
  openai-api-key: "sk-your-openai-key-here"
  anthropic-api-key: "sk-ant-your-anthropic-key-here"
  groq-api-key: "gsk-your-groq-key-here"
  jwt-secret: "your-jwt-secret-key-here"
  pinecone-api-key: "your-pinecone-key-here"





